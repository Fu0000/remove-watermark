{
  "name": "@apps/billing-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "echo 'lint billing-service: pending eslint setup'",
    "job:reconcile:hourly": "BILLING_RECON_MODE=hourly-incremental tsx src/main.ts",
    "job:reconcile:daily": "BILLING_RECON_MODE=daily-full tsx src/main.ts",
    "test:integration": "NODE_ENV=test node --test --import tsx test/reconciliation.spec.ts"
  },
  "dependencies": {
    "@packages/shared": "workspace:*",
    "@prisma/client": "^5.22.0"
  }
}
