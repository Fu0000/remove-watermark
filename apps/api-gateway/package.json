{
  "name": "@apps/api-gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "echo 'lint api-gateway: pending eslint setup'",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema prisma/schema.prisma",
    "prisma:push": "prisma db push --schema prisma/schema.prisma",
    "test:unit": "NODE_ENV=test node --test --import tsx test/tasks.service.spec.ts",
    "test:contract": "NODE_ENV=test node --test --import tsx test/contract.spec.ts",
    "test:shared-smoke": "tsx scripts/shared-smoke.ts",
    "test:shared-smoke:matrix": "tsx scripts/shared-smoke-matrix.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.7",
    "@nestjs/core": "^11.0.7",
    "@nestjs/platform-fastify": "^11.0.7",
    "@packages/contracts": "workspace:*",
    "@packages/shared": "workspace:*",
    "@prisma/client": "^5.22.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "prisma": "^5.22.0"
  }
}
